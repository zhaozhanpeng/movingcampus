                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#97694F"
                android:text="新校区" />
            
        </LinearLayout>
        
     	  <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="#97694F"
                android:text="@string/choosecourse_courseselect_textbook" />

            <TextView
                android:id="@+id/choosecourse_courseselect_textbook_tv"
                android:layout_marginLeft="3dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#97694F"
                android:text="无教材" />
            
        </LinearLayout>
        
     	  <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="#97694F"
                android:text="@string/choosecourse_courseselect_remark" />

            <TextView
                android:id="@+id/choosecourse_courseselect_remark_tv"
                android:layout_marginLeft="3dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#97694F"
                android:layout_weight="1" />
            
        </LinearLayout>
        
     	  <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="#97694F"
                android:text="@string/choosecourse_courseselect_method" />

            <TextView
                android:id="@+id/choosecourse_courseselect_method_tv"
                android:layout_marginLeft="3dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#97694F"
                android:layout_weight="1"/>
            
        </LinearLayout>
        
     	  <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="#97694F"
                android:text="@string/choosecourse_courseselect_shortterm" />

            <TextView
                android:id="@+id/choosecourse_courseselect_shortterm_tv"
                android:layout_marginLeft="3dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#97694F"
                android:layout_weight="1"/>
            
        </LinearLayout>
</LinearLayout>
