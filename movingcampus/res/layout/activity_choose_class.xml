<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
   android:background="@color/background"

    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/shake_title_bar"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/title_bar"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/choosecourse_btn_back"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/title_btn_back"
            android:onClick="shake_activity_back"
            android:text="@string/back"
            android:textColor="#fff"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/choosecource"
            android:textColor="#ffffff"
            android:textSize="20sp" />
        
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="10.0dip" />

    <LinearLayout
        android:id="@id/linearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="2.0dip"
        android:orientation="horizontal" >

        <include
            android:layout_width="match_parent"
            layout="@layout/student_choosecourse_idname" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="5.0dip" />
    <View
        android:id="@id/home_view1"
        android:layout_width="fill_parent"
        android:layout_height="2.0px"
        android:background="#ff9966cc" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="5.0dip" />
    <LinearLayout
        android:id="@id/linearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="2.0dip"
        android:orientation="horizontal" >

        <include
            android:layout_height="121dp"
           layout="@layout/choose_course_choice"
            /> <!--  layout="@layout/choose_course_pro" -->

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="10.0dip" />
		<ListView android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:id="@+id/show_selectCourse_items"></ListView>
<!--  <TabHost></TabHost>此处是“课程目录”“已选课程”两个标题栏，两个栏均是listview  -->
    

</LinearLayout>