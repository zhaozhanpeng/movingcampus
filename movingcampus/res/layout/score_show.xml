<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/jw_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/shake_title_bar"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/title_bar"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/btn_back"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/title_btn_back"
            android:onClick="shake_activity_back"
            android:text="@string/back"
            android:textColor="#fff"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/scoreconsult"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_ss_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2014"
                android:textSize="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学年"
                android:textSize="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   第"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_ss_term"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学期"
                android:textSize="15dp" />
        </LinearLayout>

        <Button
            android:id="@+id/iv_ss_check"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/select_term"
            android:paddingRight="25dp" />
    </RelativeLayout>

    <View
        android:id="@id/home_view1"
        android:layout_width="fill_parent"
        android:layout_height="2.0px"
        android:background="#dadada" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_centerVertical="true" >

        <LinearLayout
            android:id="@+id/tl_ss_result"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true" >

            <TextView
                android:id="@+id/tv_ss_coursename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="课程名"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_ss_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="成绩"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_ss_credit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="学分"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_ss_pro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="课程性质"
                android:textSize="15dp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@id/home_view1"
        android:layout_width="fill_parent"
        android:layout_height="5.0px"
        android:background="#c65050" />

    <ListView
        android:id="@+id/lv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fbf8e5" >
    </ListView>

</LinearLayout>